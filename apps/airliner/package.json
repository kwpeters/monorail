{
  "name": "airliner",
  "displayName": "airliner",
  "description": "Miscellaneous quality of life improvements for VS Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "airliner.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest-old": "npm run compile && npm run lint",
    "lint-old": "eslint src",
    "test-ext": "vscode-test",

    "build": "npm run compile",
    "test": "tsx ../../node_modules/jasmine/bin/jasmine.js --color --config=./jasmine.json",
    "lint": "eslint ./src",
    "type-check": "tsc --project tsconfig.ut.json --noEmit"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@stylistic/eslint-plugin": "^2.8.0",
    "@types/jasmine": "^5.1.4",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "eslint": "^8.57.1",
    "jasmine": "^5.3.0"
  }
}
