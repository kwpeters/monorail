{
    "name": "@repo/mille-bornes-shared",
    "version": "0.0.0",
    "type": "module",
    "private": true,
    "scripts": {
        "dev": "echo 'Add dev script here'",
        "build": "tsc --build tsconfig.src.json",
        "test": "tsx ../../node_modules/jasmine/bin/jasmine.js --color --config=./jasmine.json",
        "lint": "eslint --format unix ./src",
        "type-check": "tsc --project tsconfig.json --noEmit",
        "depcheck": "depcheck"
    },
    "exports": {
        "./drivingZone": {
            "types": "./src/drivingZone.mts",
            "default": "./dist/drivingZone.mjs"
        },
        "./gameState": {
            "types": "./src/gameState.mts",
            "default": "./dist/gameState.mjs"
        },
        "./milleBornesCard": {
            "types": "./src/milleBornesCard.mts",
            "default": "./dist/milleBornesCard.mjs"
        },
        "./gameConfig": {
            "types": "./src/gameConfig.mts",
            "default": "./dist/gameConfig.mjs"
        }
    },
    "devDependencies": {
        "@repo/eslint-config": "*",
        "@repo/typescript-config": "*",
        "@stylistic/eslint-plugin": "^2.8.0",
        "@types/jasmine": "^5.1.4",
        "@typescript-eslint/eslint-plugin": "^8.6.0",
        "@typescript-eslint/parser": "^8.6.0",
        "eslint": "^8.57.1",
        "jasmine": "^5.3.0"
    },
    "dependencies": {
        "@repo/depot": "*",
        "zod": "^4.3.6"
    }
}
