{
    "name": "monorail",
    "version": "1.0.0",
    "description": "Monorepo for packages and apps",
    "private": true,
    "engines": {
        "node": ">=20"
    },
    "packageManager": "npm@10.5.0",
    "author": "Kevin Peters <kwpeters@gmail.com>",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kwpeters/monorail.git"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/kwpeters/monorail/issues"
    },
    "homepage": "https://github.com/kwpeters/monorail#readme",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "lint": "turbo lint",
        "test": "turbo test",
        "createBin": "tsx ./apps/build-app-assist/src/index.mts createRepoBin --repoRootDir .",
        "all": "npm run build && npm run lint && npm run test && npm run createBin",
        "type-check": "turbo type-check"
    },
    "devDependencies": {
        "depcheck": "^1.4.7",
        "tsx": "^4.19.1",
        "turbo": "^2.1.3",
        "typescript": "5.7.*"
    }
}
